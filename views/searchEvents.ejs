<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Search Events</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="../css/main.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="../js/main.js"></script>
</head>

<body>
    <header>
        <% include ./headers/header.ejs %>
    </header>
    <h1>
        <%= title %>
    </h1>
    <form name="form2" method="GET" action="/searchEvents.ejs">
        <div><span class="formdiv">Event Name (Optional)</span>
            <input type="text" id="ename" name="ename" placeholder="Event Name (Optional)"></div>
        <div><span class="formdiv">Event Start Time </span>
            <input type="time" id="stime" name="stime"></div>
        <div><span class="formdiv">Event End Time </span>
            <input type="time" id="etime" name="etime"></div>
        <div><span class="formdiv">Event Start Date </span>
            <input type="date" id="sedate" name="sedate"></div>
        <div><span class="formdiv">Event End Date </span>
            <input type="date" id="edate" name="edate"></div>
        <div><button type="submit" value="Search">Search</button></div>
    </form>
    
    <div class="resultsSection">
        <% if (results) { %>
        <% for (var result in results) { %>
            <ul>
                <li style="opacity: 0;"><span class="resultsInfo">Event Id: </span><span><%= results[result].id %></span></li>
                <li><span class="resultsInfo">Event Name: </span><%= results[result].summary %></li>
                <li><span class="resultsInfo">Event Description: </span><%= results[result].description %></li>
                <li><span class="resultsInfo">Event Place: </span><%= results[result].location %></li>
                <li><span class="resultsInfo">Event Start DateTime: </span><%= results[result].start.dateTime %></li>
                <li><span class="resultsInfo">Event End DateTime: </span><%= results[result].end.dateTime %></li>
                <li style="margin-bottom: 10px;"><button type="button" class="resultsDelete" value="Delete">Delete</button></li>
            </ul>
        <% }} %>
    </div>
</body>

</html>